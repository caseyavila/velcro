<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/textHighEmphasis</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/manrope_extrabold</item>
    </style>

    <style name="NavigationBarTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <!-- Make color of ProgressBars consistent with Primary Color located in other places of the app -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Refresh" parent="AppTheme">
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">@color/colorRefresh</item>
    </style>

</resources>
